<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:padding="8dp"
		android:background="#EC407A"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/textview1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="The Drawing Proper"
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"/>
	</LinearLayout>
	<ScrollView
		android:id="@+id/window3"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#FFE0B2">
		<LinearLayout
			android:id="@+id/linear6"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#FFF3E0"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear7"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#7B1FA2"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview60"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#BA68C8"
					android:gravity="center_horizontal"
					android:text="RONNIE'S TASTY EDIBLES "
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"/>
				<TextView
					android:id="@+id/textview61"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="TextView"
					android:textSize="14sp"
					android:textColor="#FFFFFF"/>
				<ImageView
					android:id="@+id/imageview52"
					android:layout_width="wrap_content"
					android:layout_height="250dp"
					android:src="@drawable/rte1"
					android:scaleType="centerInside"/>
			</LinearLayout>
			<TextView
				android:id="@+id/textview52"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="TextView"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview49"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/b30"
				android:scaleType="center"/>
			<TextView
				android:id="@+id/textview53"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="N/B: there are some lecture halls whose lecturers recommend 8mm (0.8cm) instead.\n If your lecturer does so, follow as instructed. \n\nThere are 2 ways you can achieve the border line. The Green way, or the Yellow way. Choose whichever one that suits you."
				android:textSize="16sp"
				android:textColor="#000000"/>
			<TextView
				android:id="@+id/textview54"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="\nSTEP 1: With your ruler, mark 10mm from the edges of your paper. I'd advice you to mark at least, two on each side. \n\nSTEP 2: Use your T-square to join the marks, and you have your Border line, as shown:"
				android:textSize="16sp"
				android:textColor="#1B5E20"/>
			<TextView
				android:id="@+id/textview55"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="TextView"
				android:textSize="16sp"
				android:textColor="#F9A825"/>
			<TextView
				android:id="@+id/textview56"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="TextView"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview50"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/b31"
				android:scaleType="centerCrop"/>
			<TextView
				android:id="@+id/textview57"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="Then, with the dimensions :"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview51"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/b32"
				android:scaleType="centerCrop"/>
			<TextView
				android:id="@+id/textview58"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="It has a total height of 46mm(4.6cm) and length of 150mm(15cm)\n\n\nThe following video will show you how to make your title block the best in FUTO. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<WebView
				android:id="@+id/webview1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
			<TextView
				android:id="@+id/textview59"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="TextView"
				android:textSize="16sp"
				android:textColor="#000000"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
