<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:padding="8dp"
		android:background="#AD1457"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/textview1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Perculiar"
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"/>
		<Spinner
			android:id="@+id/spinner1"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="@drawable/ic_more_vert_white"
			android:spinnerMode="dropdown"/>
	</LinearLayout>
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#FFE0B2">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#FFF3E0"
			android:orientation="vertical">
			<TextView
				android:id="@+id/textview2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="TextView"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p01"
				android:scaleType="center"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="as opposed to eccentric circles: you can see that these circles don't have the same center."
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview2"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p02"
				android:scaleType="center"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 1: Draw two concentric circles with diameters equal to the major and minor axes. That is, circles of diameters 110 and 90mm (radii 55mm and 45mm). \n\nSTEP 2: Divide the circles into 12 equal parts. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview3"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p03"
				android:scaleType="fitCenter"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="Now, from the points where these 12 lines cut:\n\n••The smaller circle, \nSTEP 3: Project small horizontal lines outward and away from it. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview4"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p004"
				android:scaleType="fitCenter"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="••The Bigger circle, \nSTEP 4: Project small vertical lines to intersect the horizontal lines from the smaller circle.. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview5"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p04"
				android:scaleType="fitCenter"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview7"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 5: Use your French curve to connect all the points of intersection  to give the ellipse. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview6"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p05"
				android:scaleType="fitCenter"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="TextView"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview7"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p06"
				android:scaleType="center"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview9"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="TextView"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<TextView
				android:id="@+id/textview27"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal"
				android:text="Half of Major axis = Distance between Focus &amp; Minor axis"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="#AD1457"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview28"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="Meaning: AO = F1C  or  BO = F2C\nAO = F1D  or  BO = F2D\nWhich is the same thing. \n\n\nSTEP 1: Draw a straight line, AB = 100mm "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview8"
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:src="@drawable/p07"
				android:scaleType="centerCrop"/>
			<TextView
				android:id="@+id/textview10"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 2: Erect a continuous vertical line at the middle which would serve as the minor axis. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview9"
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:src="@drawable/p08"
				android:scaleType="centerCrop"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview11"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 3: Mark F1 and F2, 40mm on both sides of point O. These are the focal points. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview10"
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:src="@drawable/p09"
				android:scaleType="centerCrop"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview25"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="\nRemember the relationship, AO = F1C or BO = F2D\n\nSTEP 4: To get the minor axis, take distance AO with your compass, place on F1 and use it to cut the perpendicular line at point C. \nDo the same thing to get point D. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview11"
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:src="@drawable/p10"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview26"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="Measure this distance... Minor Axis = 60mm\n\nSTEP 5: Now, between the Foci (plural of focus) and O, mark some equal points and you can number them as shown:"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview12"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p11"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview20"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 6a: Very crucial now: Place your compass on A and extend to point 1B. With this distance (A—1B), place your compass on F1 and draw arcs CD s above and below. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview13"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p12"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview24"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 6b: Place your compass on A and extend to 2B. With this radius, place on and F1 draw arcs above and below. \nDo this for all the other points: 3, 4, etc. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview14"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p13"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview22"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 7a: Place your compass on F2 and with radius B—1B, draw arcs to cut the arcs you previously made by A—1B (the arcs drawn in step 6a) "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview15"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p14"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview23"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 7b: Place your compass on F2 and with radius B—2B, draw arcs to cut the arcs you previously made by A—2B. \nDo this for all the other points: 3B, 4B, etc. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview16"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p15"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview12"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 8: this is one half of the ellipse. For the other half, repeat steps 6 &amp; 7, but in reverse. Replace all the Bs with As, all the F1 with F2 and vice versa."
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview17"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p16"
				android:scaleType="center"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview21"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text=" STEP 9: Use your French curve to connect all the points to give you the ellipse. \nNow, let's move over to the Hyperbola shall we\?"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview18"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p17"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview13"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="TextView"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview19"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p18"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview19"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 2: Mark the point P according to the given measurements. Draw lines passing through P and parallel to OA and OB. \nLet's call them CD &amp; EF. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview20"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p19"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview14"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 3: Mark some random points along line EF. I'll mark 6 points here because it was asked specifically not to be less than 6.\n\nOf course, by now you guys should know the more points, the more accurate the curve. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview21"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p20"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview18"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 4: Project lines starting from O and going through the six points along line EF. "
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview22"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p21"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview17"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="Now, you can see that each one of these slanted lines cut CD &amp; EF at two points. I've indicated them with the colored dots below:"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview23"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p22"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview15"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 5: Fron these intersections (the colored dots), project horizontal lines from line CD, and vertical lines from line EF as shown below :"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview24"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p23"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview16"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="STEP 6: The intersection of these horizontal and vertical lines forms your points. The locus of these points is your hyperbola. Using your French curves, connect them with a SMOOTH curve."
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview25"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/p24"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview29"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="Now, we're done with the final problem here. Don't worry, after this, the next topic (Crank Mechanisms) will be a walk over I promise. "
				android:textSize="16sp"
				android:textColor="#000000"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
