<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:padding="8dp"
		android:background="#E91E63"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/textview1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Scales"
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:layout_gravity="center_vertical"/>
	</LinearLayout>
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#FFE0B2">
		<LinearLayout
			android:id="@+id/linear12"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#FFF3E0"
			android:orientation="vertical">
			<TextView
				android:id="@+id/textview22"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="OK, so you've been on a lot of milk. Now it's time to chew on some bone! Better brush up. \nHere's the first &quot;serious&quot; topic, lol. \n Before we get started, there are some stuff you need to know at the back of your mind—Ok, no. Maybe at the FRONT instead."
				android:textSize="16sp"
				android:textColor="#000000"/>
			<TextView
				android:id="@+id/textview23"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Unit Conversion Chart "
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#6A1B9A"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview24"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="You must know how to convert between the following units, if you really don't want problems in this life, this Eng103 life..."
				android:textSize="16sp"
				android:textColor="#000000"/>
			<ImageView
				android:id="@+id/imageview5"
				android:layout_width="wrap_content"
				android:layout_height="280dp"
				android:src="@drawable/chart"
				android:scaleType="fitCenter"/>
			<TextView
				android:id="@+id/textview25"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="Take a look at this diagram... To convert from a bigger to a smaller unit (going down the chart) , you multiply by 10. Going up the chart (smaller to bigger unit)  you divide by 10. \nLet's say, for example, Converting 1Hm to meters..you have:"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<TextView
				android:id="@+id/textview26"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="1Hm x 10 x 10 = 100m"
				android:textSize="16sp"
				android:textColor="#AD1457"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview27"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:gravity="center_horizontal"
				android:text="(Down the steps twice)\n\nConverting 75cm to Dm, we have:"
				android:textSize="16sp"
				android:textColor="#000000"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview28"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="75cm ÷10 ÷10 ÷10 = 0.075Dm"
				android:textSize="16sp"
				android:textColor="#AD1457"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview29"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="Play around with this until you're conversant with it. \nThis is not the scale you see on your title block. It goes far beyond that. \n\n\nNow, below I've listed the types of scales used in FUTO:"
				android:textSize="16sp"
				android:textColor="#000000"/>
			<TextView
				android:id="@+id/textview30"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:gravity="center_horizontal"
				android:text="So, let's start from the easiest one, shall we\? "
				android:textSize="16sp"
				android:textColor="#000000"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview31"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Click below to know more ⬇️"
				android:textSize="16sp"
				android:textStyle="bold|italic"
				android:textColor="#000000"
				android:layout_gravity="center_horizontal"/>
			<Spinner
				android:id="@+id/spinner1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#E0E0E0"
				android:spinnerMode="dropdown"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
