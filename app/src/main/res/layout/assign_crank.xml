<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:padding="8dp"
		android:background="#7B1FA2"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/textview42"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Assignments "
			android:textSize="16sp"
			android:textColor="#FFFFFF"/>
	</LinearLayout>
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFE0B2">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#EEEEEE"
				android:gravity="center_horizontal"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/tan1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="TANGENCY "
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#000000"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/win1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFF3E0"
				android:gravity="center_horizontal"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="There are some skills you'll need to know in order to tackle some complex problems. I'll outline 3 of them:\n\nHow to draw an arc to touch:"
					android:textSize="14sp"
					android:textStyle="italic"
					android:textColor="#000000"/>
				<TextView
					android:id="@+id/textview7"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="1. An arc and a line, e.g. use an arc of R15 to connect the circle and line externally... "
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#7B1FA2"/>
				<ImageView
					android:id="@+id/imageview1"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/asst1"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview8"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="STEP1. Add the radius of the circle to that of the arc, from the circle's center, open your compass to R25 and draw an arc to cut the line at point A. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview22"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/asst2"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview10"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="STEP2. Place your compass on A and open to the radius of the arc, in this case, 16. Draw an arc to cut the first one at O. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview2"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/asst3"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview29"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="STEP3. From O, draw an arc to connect the circle and the line."
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview3"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/asst4"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview32"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="2. An Arc and a Point, e.g. use two arcs of R15 to connect the circle and point A externally and internally..."
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#7B1FA2"/>
				<ImageView
					android:id="@+id/imageview23"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/asst5"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview31"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="STEP1. For the external, ADD the radii of the circle and the arc; from the circle's center, draw an arc of R25. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview6"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/asst7"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview30"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="STEP2. Place your compass on the point with the radius of the needed arc (R15) and draw an arc to cut the first at O. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview4"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/asst6"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview26"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="STEP3. From O, draw an arc to touch both the circle and the point. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview5"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/asst8"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview28"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="STEP4. For the internal arc, repeat steps 1 through 3, but instead of adding radii, you subtract the radii. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview24"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/asst9"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview27"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="Refer to the tutorial section for in-depth explanations of the concept. \n ...\nNow, I'll illustrate these concepts with 2 complex examples from your &quot;Pickup &amp; Parker&quot; textbook. "
					android:textSize="14sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview7"
					android:layout_width="wrap_content"
					android:layout_height="250dp"
					android:src="@drawable/ast10"
					android:scaleType="centerInside"
					android:layout_gravity="center_horizontal"/>
				<TextView
					android:id="@+id/textview20"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="In questions like these, the first and most important thing to do is to locate the centers of the circles. Let's start with the following circles R90, Φ90(up), and Φ90(down). Now, draw the arcs needed. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview8"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast11"
					android:scaleType="centerInside"/>
				<TextView
					android:id="@+id/textview25"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="How do we get the two R45s here\?"
					android:textSize="16sp"
					android:textColor="#000000"
					android:layout_gravity="center_horizontal"/>
				<ImageView
					android:id="@+id/imageview9"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast14"
					android:scaleType="center"/>
				<TextView
					android:id="@+id/textview24"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="Look closely at the diagram, they have a distance of 45 from points A &amp; B. Locate them, and draw them. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview10"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast12"
					android:scaleType="centerInside"/>
				<TextView
					android:id="@+id/textview23"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="Let's get the tangents; the one on the left (colored green)can be gotten by joining Φ90(up) and Φ90(down) with your ruler. The one on the right(colored violet) can be gotten by joining the center of Φ90(up) to the body of R90. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview13"
					android:layout_width="wrap_content"
					android:layout_height="150dp"
					android:src="@drawable/ast15"
					android:scaleType="centerCrop"/>
				<ImageView
					android:id="@+id/imageview11"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast13"
					android:scaleType="centerInside"/>
				<TextView
					android:id="@+id/textview22"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="Finally, just add the small arcs: R6 down on the left(internal arc) and R32 on the top right(external arc). \n\nFor the original question, refer to page 20, No. 10 of your &quot;Pickup and Parker&quot; textbook."
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview12"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast16"
					android:scaleType="centerInside"/>
				<TextView
					android:id="@+id/textview41"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Second Example"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview25"
					android:layout_width="wrap_content"
					android:layout_height="300dp"
					android:src="@drawable/ast17"
					android:scaleType="centerInside"/>
				<TextView
					android:id="@+id/textview21"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="As I said before, the 1st thing to do is locate the circles. Let's start with the following: Φ76, Φ50, and BOSS Φ50. They are on a triangle with sides = 146, 102 and 152. So, get this using the &quot;3sides-given&quot;  method. Draw the circles on the points. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview14"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast18"
					android:scaleType="centerInside"/>
				<TextView
					android:id="@+id/textview19"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="For the R76 arc, it's an external arc between Φ76 and BOSS Φ50."
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview15"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast19"
					android:scaleType="centerInside"/>
				<TextView
					android:id="@+id/textview18"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="Let's get this line here. You can see its at an angle of 30° to the horizontal. \nSo, get a 30° line to touch the BOSS Φ50"
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview16"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast20"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview17"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="Now, we locate this small arc of radius 50"
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview17"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast21"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview16"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="There's another line here too which is at 120° to the horizontal. Get the line, then construct the arc of R25 between these two lines (120° line and 30° line) "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview18"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast23"
					android:scaleType="centerCrop"/>
				<ImageView
					android:id="@+id/imageview26"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:layout_marginTop="10dp"
					android:src="@drawable/ast22"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview15"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="Now, for the bottomest, or should I say, the most-bottomed arc, R152, It joins the 120° line and the Φ76 circle internally. Use the method of joining a line and arc which I explained above to get it. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview19"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast24"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview13"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="Now, place your compass at the center of the Φ50 circle and draw an arc of R85. \nWhere this arc cuts the triangle is the center of two R18 arcs. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview20"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast25"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview14"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="Complete the diagram by drawing two arcs (one internal and one external) to connect them. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview21"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast26"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview12"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="For the original question, refer to page 21, No. 14 of your &quot;Pickup and Parker&quot; textbook."
					android:textSize="14sp"
					android:textColor="#000000"/>
				<TextView
					android:id="@+id/textview43"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:text="Given R1 = 20mm, R2 = 40mm and R3 = 60mm, construct 3 circles to touch one another. "
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#7B1FA2"/>
				<TextView
					android:id="@+id/textview44"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="Draw any of the two circles side-by-side. The distance between their centers will be the sum of their radii. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview28"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast01"
					android:scaleType="centerInside"/>
				<TextView
					android:id="@+id/textview46"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="With center R1 and radius R1+R3 (which is 80), draw an arc. \nWith center R2 and radius R2+R3 (which is 100), draw an arc to cut the first at O. "
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview29"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast02"
					android:scaleType="centerCrop"/>
				<TextView
					android:id="@+id/textview45"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="With radius R3 and center O, draw the third circle. \n\nFor deeper understanding of the concept, refer to external arcs under the tutorial section."
					android:textSize="16sp"
					android:textColor="#000000"/>
				<ImageView
					android:id="@+id/imageview30"
					android:layout_width="wrap_content"
					android:layout_height="200dp"
					android:src="@drawable/ast03"
					android:scaleType="centerInside"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#EEEEEE"
				android:gravity="center_horizontal"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/loc1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="LOCI"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#000000"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/win2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFF3E0"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="The assignments you'd be given in Loci would not go beyond the examples that have been solved in the tutorial section. \n\nJust practice well on the eccentricity method, using different eccentricities like ⅔, 3/5 etc"
					android:textSize="16sp"
					android:textStyle="italic"
					android:textColor="#000000"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
